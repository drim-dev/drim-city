
# All files
[*]
indent_style = space

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2
ij_xml_space_inside_empty_tag = true

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2
ij_xml_space_inside_empty_tag = true

# Code files
[*.cs]
indent_size = 4
insert_final_newline = true
charset = utf-8

# ReSharper properties
resharper_braces_for_ifelse = required
resharper_csharp_empty_block_style = together_same_line
resharper_csharp_wrap_after_declaration_lpar = false
resharper_csharp_wrap_after_invocation_lpar = false
resharper_csharp_wrap_arguments_style = wrap_if_long
resharper_csharp_wrap_parameters_style = wrap_if_long
resharper_keep_existing_embedded_arrangement = false
resharper_method_or_operator_body = expression_body
resharper_place_expr_method_on_single_line = false
resharper_place_simple_embedded_statement_on_same_line = false
resharper_trailing_comma_in_multiline_lists = true
resharper_wrap_after_declaration_lpar = false
resharper_wrap_after_invocation_lpar = false
resharper_wrap_arguments_style = wrap_if_long
resharper_wrap_parameters_style = wrap_if_long
